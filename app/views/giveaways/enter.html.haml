#gk_giveaway.gk-version-b
  .giveaway-widget
    .giveaway-image
      .inset-shadow
      = image_tag @giveaway.image.tab.url
    .giveaway-meta
      %h1.giveaway-title
        = @giveaway.title
      %h2.giveaway-prize
        = "Win #{@giveaway.prize}"
    .giveaway-description
      .pull-left.avatar-wrapper
        %span.thumb.masked.avatar{:style => "background-image: url(#{@giveaway.facebook_page.avatar_large})"}
      %h3.description-text
        = @giveaway.description_text
    .giveaway-actions
      %button#enter_giveaway.ladda-button{"data-style" => "zoom-in", "data-spinner-size" => "65"}
        %span.ladda-label Enter Now
  .giveaway-terms
    - unless @giveaway.facebook_page.canhaz_white_label?
      %p.powered-by Powered by <a href='http://giveawaykit.com' target='_blank'>Giveaway Kit</a>
    %p This promotion is in no way sponsored, endorsed or administered by, or associated with, Facebook. You understand that you are providing your information to "#{@giveaway.facebook_page.name}" and not to Facebook. Your information will only be used to administer this promotion. Entry in this promotion is subject to the #{@giveaway.terms_link}.
    .terms-text.hidden{style: "display:none"}= @giveaway.terms_text