:scss
  .giveaway-widget {
    width: 553px;
    height: 542px;
    overflow: hidden;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 3px;
    box-shadow: 0 0 3px rgba(0,0,0,.2), inset 0 2px 4px rgba(255,255,255,.3);
    position: relative;
    top: 60px;
  }

  #giveaway_image {
    height: 226px;
    overflow: hidden;
  }

.giveaway-widget.version-b
  #giveaway_image
    = image_tag @giveaway_hash.giveaway.image_url